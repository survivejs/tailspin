{
  "name": "tailwind-webpack-starter",
  "version": "0.0.0",
  "private": true,
  "description": "Opinionated starter for Tailwind/webpack projects",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run generate-meta",
    "build": "npm run clean && NODE_ENV=production webpack --env production",
    "postbuild": "npm run purge-css",
    "purge-css": "NODE_ENV=purge postcss public/_shared.css --verbose --replace",
    "prestart": "npm run clean && npm run generate-meta",
    "start": "webpack --env development",
    "clean": "rimraf public",
    "generate-sitemap": "TODO",
    "check-links": "TODO",
    "check-types": "tsc --noEmit",
    "stats": "npm run build -- --json > stats.json",
    "analyze-stats": "webpack-bundle-analyzer stats.json",
    "generate-meta": "node ./utils/generate-meta.js",
    "test": "jest"
  },
  "keywords": [
    "tailwind",
    "tailwindcss",
    "webpack"
  ],
  "author": "Juho Vepsäläinen",
  "license": "MIT",
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@phenomnomnominal/tsquery": "^4.1.0",
    "@types/autoprefixer": "^9.7.2",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/glob": "^7.1.3",
    "@types/highlight.js": "^9.12.4",
    "@types/jest": "^26.0.10",
    "@types/mini-css-extract-plugin": "^0.9.1",
    "@types/remove-markdown": "^0.1.1",
    "@types/rimraf": "^3.0.0",
    "@types/terser-webpack-plugin": "^4.1.0",
    "@types/webpack": "^4.41.21",
    "@types/webpack-bundle-analyzer": "^3.8.0",
    "@types/webpack-dev-server": "^3.11.0",
    "@types/webpack-env": "^1.15.2",
    "@types/webpack-merge": "^4.1.5",
    "@types/webpack-watched-glob-entries-plugin": "^2.1.0",
    "acorn": "^8.0.1",
    "acorn-jsx": "^5.2.0",
    "autoprefixer": "^9.8.6",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.1",
    "decache": "^4.6.0",
    "escodegen": "^2.0.0",
    "front-matter": "^4.0.2",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "hyperlink": "^4.5.2",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "mini-css-extract-plugin": "^0.10.0",
    "mini-html-webpack-plugin": "^3.0.7",
    "object.omit": "^3.0.0",
    "postcss": "^7.0.32",
    "postcss-clean": "^1.1.0",
    "postcss-cli": "^7.1.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "redirect-webpack-plugin": "^0.1.1",
    "remove-markdown": "^0.3.0",
    "rimraf": "^3.0.2",
    "sanitize-html": "^1.27.3",
    "sitemap-static": "^0.4.4",
    "source-map-loader": "^1.0.1",
    "tailwindcss": "^1.7.0",
    "tap-spot": "^1.1.1",
    "terser-webpack-plugin": "^4.1.0",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "ts-node": "^8.10.2",
    "typed-html": "^2.0.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-add-dependency-plugin": "^0.1.2",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.2",
    "webpack-plugin-serve": "^1.0.1",
    "webpack-watched-glob-entries-plugin": "^2.1.7"
  },
  "browserslist": [
    "defaults"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.2.0",
    "highlight.js": "^10.1.2",
    "marked": "^1.1.1",
    "polished": "^3.6.5",
    "sidewind": "^3.1.2"
  }
}
