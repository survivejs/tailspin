{
  "name": "tailwind-webpack-starter",
  "version": "0.0.0",
  "private": true,
  "description": "Opinionated starter for Tailwind projects",
  "main": "src/index.ts",
  "scripts": {
    "prebuild": "npm run generate-meta",
    "build": "npm run clean && TODO",
    "postbuild": "npm run purge-css",
    "prestart": "npm run generate-meta",
    "start": "deno run --config ./tsconfig.json --importmap=import_map.json --unstable --allow-read --allow-write --allow-net src/index.ts --serve --watch",
    "clean": "rimraf public",
    "generate-sitemap": "TODO",
    "check-links": "TODO",
    "check-types": "tsc --noEmit",
    "stats": "npm run build -- --json > stats.json",
    "analyze-stats": "webpack-bundle-analyzer stats.json",
    "generate-meta": "deno run --unstable --allow-read --allow-write ./utils/generate-meta.ts",
    "test": "jest",
    "lint-styles": "stylelint --fix pages/index.pcss"
  },
  "keywords": [
    "tailwind",
    "tailwindcss"
  ],
  "author": "Juho Vepsäläinen",
  "license": "MIT",
  "devDependencies": {
    "@phenomnomnominal/tsquery": "^4.1.1",
    "@types/highlight.js": "^9.12.4",
    "@types/jest": "^26.0.13",
    "@types/remove-markdown": "^0.1.1",
    "@types/rimraf": "^3.0.0",
    "acorn": "^8.0.1",
    "acorn-jsx": "^5.3.1",
    "escodegen": "^2.0.0",
    "front-matter": "^4.0.2",
    "husky": "^4.3.0",
    "hyperlink": "^4.5.2",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "object.omit": "^3.0.0",
    "prettier": "^2.1.1",
    "remove-markdown": "^0.3.0",
    "rimraf": "^3.0.2",
    "sanitize-html": "^1.27.4",
    "sitemap-static": "^0.4.4",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^26.3.0",
    "typed-html": "^2.0.0",
    "typescript": "^4.0.2"
  },
  "browserslist": [
    "defaults"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint-styles"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "dependencies": {
    "highlight.js": "^10.2.0",
    "polished": "^3.6.6",
    "sidewind": "^3.1.2"
  }
}
