{
  "name": "tailwind-webpack-starter",
  "version": "0.0.0",
  "private": true,
  "description": "Opinionated starter for Tailwind projects",
  "main": "src/index.ts",
  "scripts": {
    "format": "deno fmt --ignore=./node_modules/ --unstable",
    "prebuild": "npm run generate-meta",
    "build": "npm run clean && TODO",
    "postbuild": "npm run purge-css",
    "prestart": "npm run generate-meta",
    "start": "deno run --config ./tsconfig.json --importmap=import_map.json --unstable --allow-read --allow-write --allow-net src/index.ts --serve --watch",
    "clean": "rimraf public",
    "generate-sitemap": "TODO",
    "check-links": "TODO",
    "check-types": "tsc --noEmit",
    "stats": "npm run build -- --json > stats.json",
    "analyze-stats": "webpack-bundle-analyzer stats.json",
    "generate-meta": "deno run --unstable --allow-read --allow-write ./utils/generate-meta.ts",
    "test": "jest"
  },
  "keywords": [
    "tailwind",
    "tailwindcss"
  ],
  "author": "Juho Vepsäläinen",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "@types/rimraf": "^3.0.0",
    "hyperlink": "^4.5.2",
    "jest": "^26.4.2",
    "object.omit": "^3.0.0",
    "remove-markdown": "^0.3.0",
    "rimraf": "^3.0.2",
    "sitemap-static": "^0.4.4",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {}
}
